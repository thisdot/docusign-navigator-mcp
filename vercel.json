{
  "rewrites": [
    {
      "source": "/.well-known/:path*",
      "destination": "/api/well-known/:path*"
    },
    {
      "source": "/(register|authorize|token)",
      "destination": "/api/auth/$1"
    },
    {
      "source": "/auth/:path*",
      "destination": "/api/auth/:path*"
    },
    {
      "source": "/(health|mcp)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/public/index.html"
    }
  ],
  "functions": {
    "api/mcp.ts": {
      "maxDuration": 60
    }
  }
}
